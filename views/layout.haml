!!! 5
%html
  %head
    %meta{:charset => "UTF-8"}
    %title 目からビーム画像ジェネレーター
    %script{:type => "text/javascript", :src => "http://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"}
    %link{:rel => "stylesheet/less", :href => "/lib/bootstrap/less/bootstrap.less"}
    %script{:type => "text/javascript", :src => "/lib/less/less.js"}
    %script{:type => "text/javascript", :src => "/js/main.js"}
    %link{:rel => "stylesheet", :type => "text/css", :href => "/css/style.css"}
  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a.brand{:href => "/"} eye beam generator
    .container.main
      .forkme
        %a{:href => "https://github.com/sugyan/eyebeam-herokuapp"}
          %img{:style => "position: absolute; top: 40; right: 0; border: 0;", :src => "https://s3.amazonaws.com/github/ribbons/forkme_right_gray_6d6d6d.png", :alt => "Fork me on GitHub"}
      != yield
      %hr
      %footer
        .pull-right
          .social-buttons.pull-left
            .hatena.pull-left
              %a.hatena-bookmark-button{:href => "http://b.hatena.ne.jp/entry/http://eyebeam.herokuapp.com/", :"data-hatena-bookmark-title" => "目からビーム画像ジェネレーター", :"data-hatena-bookmark-layout" => "standard", :title => "このエントリーをはてなブックマークに追加"}
                %img{:src => "http://b.st-hatena.com/images/entry-button/button-only.gif", :alt => "このエントリーをはてなブックマークに追加", :width => "20", :height => "20", :style => "border: none;"}
              %script{:type => "text/javascript", :src => "http://b.st-hatena.com/js/bookmark_button.js", :charset => "utf-8", :async => "async"}
            .twitter.pull-left
              %a.twitter-share-button{:href => "https://twitter.com/share", :"data-url" => "http://eyebeam.herokuapp.com/", :"data-via" => "sugyan", :"data-lang" => "ja", :"data-hashtags" => "momoclo"} ツイート
              %script
                !function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");
          .author.pull-left
            %span created by
            %a{:href => "https://twitter.com/#!/sugyan"} @sugyan
